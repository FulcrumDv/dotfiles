  "terminal": {
    "alternate_scroll": "off",
    "blinking": "off",
    "copy_on_select": false,
    "env": {},
    "font_family": null,
    "font_features": null,
    "font_size": null,
    "option_as_meta": true,
    "button": false,
    "shell": {},
    "toolbar": {
      "title": true
    },
    "working_directory": "current_project_directory"
  },
  "cursor_blink": false
