  },
  "vim_mode": true,
  "ui_font_size": 18,
  "buffer_font_size": 16,
  "buffer_font_family": "Fira Code",
  "theme": {
    "mode": "system",
    "light": "Ros√© Pine Moon",
    "dark": "One Dark"
